{
  "name": "kong-tests",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cypress run --browser chrome --headless",
    "cy:open": "cypress open --e2e",
    "cy:run": "cypress run --e2e",
    "create_service": "cypress run --spec 'cypress/e2e/create_service_full_url.cy.ts'",
    "create_route": "cypress run --spec 'cypress/e2e/e2e_create_route.cy.ts'",
    "duplicate_service": "cypress run --spec 'cypress/e2e/error_validation_duplicate_servicename.cy.ts'",
    "invalid_url": "cypress run --spec 'cypress/e2e/error_validation_Invalid_url.cy.ts'",
    "proxy_flow": "cypress run --spec 'cypress/e2e/proxy_traffic_flow.cy.ts'",
    "report:merge": "mochawesome-merge reports/mochawesome/mochawesome_*.json > reports/mochawesome/mochawesome.json",
    "report:html": "marge reports/mochawesome/mochawesome.json -f index -o reports/mochawesome",
    "report": "npm run report:merge && npm run report:html",
    "test:ci": "npm run cy:run && npm run report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "cypress": "^15.2.0",
    "cypress-dotenv": "^3.0.1",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
